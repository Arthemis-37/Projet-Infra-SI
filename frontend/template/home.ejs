<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../static/style/chat.css">
    <title>Home</title>
</head>

<body>
    <!-- HEADER FIXE À GAUCHE -->
    <header>
        <img id="loupe" src="../static/img/loupe.png" alt="loupe">
        <h1>Caurchat</h1>
        <img id="logo" src="../static/img/logoCaurchat.png" alt="">
        <% if (user) { %>
            <p id="user-connected">
                Bonjour <%= user.username %>
            </p>
            <% } %>
    </header>

    <!-- CONTENU PRINCIPAL -->
    <main>
        <!-- COLONNE GAUCHE : LISTE DES CONVERSATIONS -->
        <div class="conv-menu">
            <% if (userConvs) { %>
                <% userConvs.forEach(conv=> { %>
                    <a class="chat-item" data-conv-id="<%= conv.conversationId %>">
                        <div class="avatar">
                            <%= conv.participants.filter(p=> p._id.toString() !==
                                user._id.toString())[0].username.charAt(0).toUpperCase() %>
                        </div>
                        <div class="chat-content">
                            <div class="pseudo">
                                <%= conv.participants.filter(p=> p._id.toString() !== user._id.toString())[0].username
                                    %>
                            </div>
                            <div class="last-message">
                                <%= conv.lastMessage ? conv.lastMessage.content : "Aucun message" %>
                            </div>
                        </div>
                        <div class="chat-info">
                            <%= conv.lastMessage ? new Date(conv.lastMessage.createdAt).toLocaleString() : "" %>
                        </div>
                    </a>
                    <% }) %>
                        <% } %>
                            <section class="new-discussion-form">
                                <form action="/create-discussion" method="POST">
                                    <label for="selectUser">Sélection du destinataire</label>
                                    <select id="selectUser" name="selectUser">
                                        <% if (allUsers) { %>
                                            <% allUsers.forEach(user=> { %>
                                                <option value="<%= user.userId %>">
                                                    <%= user.username %>
                                                </option>
                                                <% }) %>
                                                    <% } %>
                                    </select>
                                    <button type="submit">Créer une discussion</button>
                                </form>
                            </section>
        </div>

        <!-- COLONNE DROITE : DISCUSSION SÉLECTIONNÉE -->
        <iframe class="discussion" id="convFrame" src="/conversation"></iframe>
    </main>

    <!-- FORMULAIRE DE CRÉATION DE DISCUSSION -->

</body>
<script src="../static/script/script.js" type="module"></script>
<script src="../static/script/loadConvIframe.js"></script>


</html>